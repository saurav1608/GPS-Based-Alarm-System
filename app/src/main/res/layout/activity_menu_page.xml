<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.mahe.myapplication.MenuPage">
    <ImageButton
        android:id="@+id/addgeo"
        app:srcCompat="@drawable/addimage"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="5dp"
        android:layout_width="115dp"
        android:layout_height="119dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:background="@color/black"/>

    <ImageButton
        android:id="@+id/imageButton2"
        app:srcCompat="@drawable/settings"
        tools:layout_editor_absoluteY="5dp"
        tools:layout_editor_absoluteX="265dp"
        android:layout_width="115dp"
        android:layout_height="119dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:background="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/addAlarm"
        app:srcCompat="@drawable/adtime"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="5dp"
        android:layout_width="115dp"
        android:layout_height="119dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:background="@color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD GEO"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="107dp"
        android:textColor="@color/darkblack"
        android:layout_marginEnd="25dp"
        android:layout_alignBottom="@+id/addgeo"
        android:layout_alignEnd="@+id/addgeo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD ALARM"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="107dp"
        android:textColor="@color/darkblack"
        android:layout_alignBottom="@+id/addAlarm"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="107dp"
        android:textColor="@color/darkblack"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginStart="24dp" />

</RelativeLayout>
